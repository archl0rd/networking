Header set Hiring-Now "Looking for a website? Send me a email!"

# Don't show directory listings for URLs which map to a directory.
Options -Indexes

RewriteEngine On

# Do not remove this line or mod_rewrite rules and search engine friendly URLs will stop working
RewriteBase /

#Redireciona para HTTPS
#RewriteCond %{HTTPS} !=on
#RewriteCond %{HTTP_HOST} ^(www\.)?adrianofreitas\.me$ [NC]
#RewriteRule ^.*$ https://%1adrianofreitas.me%{REQUEST_URI} [R,L]
RewriteCond %{HTTPS} off
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}

#Security Headers
Header set X-XSS-Protection 1
Header append X-FRAME-OPTIONS "SAMEORIGIN"
Header set Content-Security-Policy "default-src 'self';"
Header set X-Content-Type-Options nosniff

# One year for image files
<filesMatch ".(jpg|jpeg|png|svg|ico)$">
Header set Cache-Control "max-age=31536000, public"
</filesMatch>

# One month for css and js
<filesMatch ".(css|js)$">
Header set Cache-Control "max-age=2628000, public"
</filesMatch>

# compressão básica
<IfModule mod_gzip.c>
mod_gzip_on Yes
mod_gzip_dechunk Yes
mod_gzip_item_include file \.(html?|php|css|js|svg)$
mod_gzip_item_include mime ^text/.*
mod_gzip_item_include mime ^application/x-javascript.*
mod_gzip_item_exclude mime ^image/.*
mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</IfModule>

#Error
ErrorDocument 400 https://adrianofreitas.me/index.php?e=400
ErrorDocument 401 https://adrianofreitas.me/index.php?e=401
ErrorDocument 403 https://adrianofreitas.me/index.php?e=403
ErrorDocument 404 https://adrianofreitas.me/index.php?e=404
ErrorDocument 405 https://adrianofreitas.me/index.php?e=405
ErrorDocument 408 https://adrianofreitas.me/index.php?e=408
ErrorDocument 414 https://adrianofreitas.me/index.php?e=414
ErrorDocument 500 https://adrianofreitas.me/index.php?e=500
ErrorDocument 502 https://adrianofreitas.me/index.php?e=502
ErrorDocument 504 https://adrianofreitas.me/index.php?e=504
